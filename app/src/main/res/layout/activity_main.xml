<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main">

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#20000000" />

    <!-- Header Section - Di chuyá»ƒn lÃªn -->
    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primary"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

        <!-- Subtitle -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Game Mode"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.7" />

        <!-- Progress Text -->
        <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress: 0/400 levels (0.0%)\nGallery: 0/100 pieces"
                android:textSize="14sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Mode Selection Grid -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/modeRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:clipToPadding="false"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toTopOf="@id/customModeButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Custom Mode Button - Locked -->
    <Button
            android:id="@+id/customModeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="ðŸ”’ Custom Mode (Coming Soon)"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            android:alpha="0.6"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Buttons - RÃºt gá»n -->
    <LinearLayout
            android:id="@+id/bottomButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@id/adViewContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Button -->
        <Button
                android:id="@+id/btnGallery"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸ–¼ï¸ Gallery"
                android:textSize="15sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="6dp" />

        <!-- Bottom Row: Achievements and Settings -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <!-- Achievements Button -->
            <Button
                    android:id="@+id/btnAchievements"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="ðŸ† Achievements"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginEnd="3dp" />

            <!-- Settings Button -->
            <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Settings"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginStart="3dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- AdMob Banner -->
    <FrameLayout
            android:id="@+id/adViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    </FrameLayout>

