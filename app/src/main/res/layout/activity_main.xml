<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main">

    <!-- Header Section -->
    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primary"
                android:layout_gravity="center" />

        <!-- Subtitle -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Game Mode"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.7" />

        <!-- Progress Text -->
        <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress: 0/400 levels (0.0%)\nGallery: 0/100 pieces"
                android:textSize="14sp"
                android:textColor="@color/md_theme_light_onBackground"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Mode Selection Grid -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/modeRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toTopOf="@id/bottomButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Buttons -->
    <LinearLayout
            android:id="@+id/bottomButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Button -->
        <Button
                android:id="@+id/btnGallery"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ–¼ï¸ Gallery"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_marginBottom="8dp" />

        <!-- Bottom Row: Achievements and Settings -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

            <!-- Achievements Button -->
            <Button
                    android:id="@+id/btnAchievements"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ† Achievements"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginEnd="4dp" />

            <!-- Settings Button -->
            <Button
                    android:id="@+id/btnSettings"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Settings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Debug Button (Optional - Remove in production) -->
        <Button
                android:id="@+id/btnDebug"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ”§ Debug Info"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginTop="8dp"
                android:visibility="visible" />
        <!-- Set android:visibility="gone" in production -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>