<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Button Style -->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Primary Button (Blue Gradient) -->
    <style name="Button.Primary" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Secondary Button (White with Border) -->
    <style name="Button.Secondary" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- Danger Button (Red Gradient) -->
    <style name="Button.Danger" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_danger</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Success Button (Green Gradient) -->
    <style name="Button.Success" parent="BaseButton">
        <item name="android:background">@drawable/bg_button_success</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Power-up Button (Square with Icon) -->
    <style name="Button.PowerUp" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/bg_button_powerup</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Compact Button (for smaller spaces like shop items) -->
    <style name="Button.Compact" parent="BaseButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Compact Primary -->
    <style name="Button.Primary.Compact">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>