<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:opacity="opaque">

    <!-- Gradient Background (Purple to Blue) -->
    <item>
        <shape>
            <gradient
                    android:startColor="#7C3AED"
                    android:centerColor="#6366F1"
                    android:endColor="#3B82F6"
                    android:angle="135"
                    android:type="linear"/>
        </shape>
    </item>

    <!-- White Circle Background for Icon -->
    <item
            android:gravity="center">
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- App Icon (Use existing ic_launcher) -->
    <item
            android:gravity="center">
        <bitmap
                android:src="@mipmap/ic_launcher"
                android:gravity="center"/>
    </item>

</layer-list>

        <!--
        This version works immediately with your existing assets.
        After you create custom logo, switch to the previous version.
        -->